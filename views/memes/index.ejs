<% include ../partials/header%>


<div class="container">
    <div class="container">
        <header class = "jumbotron">
        <h1>Welcome to la Memeria</h1>
        <p>View our most freshed memes</p>
        <p>
            <a class ="btn btn-danger btn-lg "href="/memes/new">Add new meme</a>
        </p>
    </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%memes.forEach(function(meme){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src= "<%=meme.image%>">
                    <div class="caption">
                        <h4><%=meme.name%></h4>
                        
                    </div>
                    <p>
                        <a href="/memes/<%= meme._id %>" class="btn btn-danger">View meme</a>
                    </p>
                </div>    
                
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer%>